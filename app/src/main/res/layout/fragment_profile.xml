<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/bg_rectangle_profile">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:padding="20dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_profile">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="20dp"
            android:textColor="@color/whitesmoke"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Usman Pamungkas"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp"
            android:textStyle="bold">
        </TextView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/jump_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="My Profile"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_keyboard_arrow_r">
        </Button>
        <Button
            android:id="@+id/jump_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="Ubah Password"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:layout_marginTop="-10.5dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_r">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="Tentang Kami"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:layout_marginTop="-10.5dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_r">
        </Button>
        <Button
            android:id="@+id/jump_login_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="Keluar"
            android:textColor="@color/red_500"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:layout_marginTop="-10.5dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_r">
        </Button>

    </LinearLayout>

</LinearLayout>